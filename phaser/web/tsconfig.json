{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["ESNext", "DOM"],
        "jsx": "react",

        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "postcssOptions": {
                        "useConfig": true,
                    },
                }
            },
        ],
    }
}